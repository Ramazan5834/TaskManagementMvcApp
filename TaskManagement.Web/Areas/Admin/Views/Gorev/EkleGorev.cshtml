@model TaskManagement.DTO.DTOs.GorevDtos.GorevAddDto
@{
    ViewData["Title"] = "EkleGorev";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="EkleGorev" method="post" class="w-75 mx-auto p-3">
    <div class="form-group">
        <label>Ad:</label>
        <span asp-validation-for="Ad" class="text-danger"></span>
        <input type="text" asp-for="Ad" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama:</label>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz:</label>
        <span class="text-danger" asp-validation-for="AciliyetId"></span>
        <select asp-for="AciliyetId" class="form-control" asp-items="@ViewBag.Aciliyetler">
            <option hidden value="-1" >Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fa fa-plus-circle mr-2"></i>Kaydet</button>
</form>
@section JavaScript
{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
